<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.cdtime.lifecapsule_v3_api.meta.note.dao.NoteDao">
    <!--配置表和对象的字段映射 -->
    <resultMap id="noteMap" type="cc.cdtime.lifecapsule_v3_api.meta.note.entity.NoteView">
        <result property="noteId" column="note_id"/>
        <result property="userId" column="user_Id"/>
        <result property="createTime" column="create_time"/>
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="userId" column="user_id"/>
        <result property="noteType" column="note_type"/>
        <result property="userEncodeKey" column="user_encode_key"/>
    </resultMap>

    <!--创建一个笔记信息-->
    <insert id="createNoteInfo"
            useGeneratedKeys="true"
            parameterType="cc.cdtime.lifecapsule_v3_api.meta.note.entity.NoteInfo">
        insert into note_info
        (note_id, user_id, title,
         create_time, status, encrypt,
         category_id)
        values (#{noteId}, #{userId}, #{title},
                #{createTime}, #{status}, #{encrypt},
             #{categoryId})
    </insert>

    <!--查询一条笔记简要信息-->
    <select id="getNoteInfo" parameterType="java.lang.String" resultMap="noteMap">
        select *
        from note_info
        where note_id = #{noteId}
    </select>

    <!--查询笔记列表-->
    <select id="listNoteInfo" parameterType="map" resultMap="noteMap">
        select n.ids,
        note_id,
        n.user_id,
        title,
        n.create_time,
        status,
        encrypt,
        n.category_id,
        category_name,
        note_type,
        nickname
        from note_info n
        left join category c on n.category_id = c.category_id
        left join user_base ub on c.user_id=ub.user_id
        where 1 = 1
        <choose>
            <when test="userId!=null">
                and n.user_id=#{userId}
            </when>
        </choose>
        <choose>
            <when test="categoryId!=null">
                and n.category_id=#{categoryId}
            </when>
        </choose>

        <choose>
            <when test="keyword!=null">
                and title like concat('%',#{keyword}, '%')
            </when>
        </choose>
        order by create_time desc
        <choose>
            <when test="offset!=null">
                limit #{size} offset #{offset}
            </when>
        </choose>
    </select>

    <!--统计笔记数量-->
    <select id="totalNoteInfo" parameterType="map" resultType="java.lang.Integer">
        select count(*) as total from note_info
        where 1=1
        <choose>
            <when test="userId!=null">
                and user_id=#{userId}
            </when>
        </choose>
        <choose>
            <when test="categoryId!=null">
                and category_id=#{categoryId}
            </when>
        </choose>
        <choose>
            <when test="keyword!=null">
                and title like concat('%',#{keyword}, '%')
            </when>
        </choose>
    </select>

    <!--修改笔记-->
    <update id="updateNoteInfo" parameterType="map">
        update note_info
        <set>
            <if test="title!=null">
                title=#{title},
            </if>
            <if test="encrypt!=null">
                encrypt=#{encrypt},
            </if>
            <if test="userEncodeKey!=null">
                user_encode_key=#{userEncodeKey},
            </if>
            <if test="categoryId!=null">
                category_id=#{categoryId}
            </if>
        </set>
        where note_id=#{noteId}
    </update>

    <!--物理删除笔记-->
    <delete id="deleteNoteInfo" parameterType="java.lang.String">
        delete
        from note_info
        where note_id = #{noteId}
    </delete>

    <!--查询创建了触发器的笔记列表-->
    <select id="listNoteTrigger" parameterType="java.lang.String" resultMap="noteMap">
        select *
        from note_info
        where note_id in (select note_id
                          from note_recipient
                          where recipient_id in (select note_trigger.recipient_id
                                                 from note_trigger
                                                 where 1 = 1
                                                   and user_id = #{userId}))
    </select>
</mapper>